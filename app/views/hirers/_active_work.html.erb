<div class="tab-pane fade show active" id="active-work" role="tabpanel" 
  aria-labelledby="active-work-tab"
>
  <div class="row row-cols-1 row-cols-md-3 g-4 pt-3">
    <% (get_active_hirers @user.account_id).each do |h| %>

      <% if h["status"]["Finished"].nil? %>

        <div class="col">
          <%= link_to "/cards/#{h['id']}", class: "no_link" do %>
            <div class="card h-100" style="width: 18rem;">
              <div class="card-body">
                <h4 class="card-title"><%= h["receiver_id"] %></h5>
                <h5>Status: <%= h["status"] %></h5>
                <p class="card-text"><%= h["description"] %></p>
              </div>
            </div>
          <% end %>
        </div>

      <% end %>

    <% end %>
  </div>
</div>