<% @array1 = get_active_hirers @user.account_id %>
<% @array2 = get_stopped_by_owner @user.account_id %>

<div class="tab-pane fade" id="done-work" role="tabpanel" 
  aria-labelledby="done-work-tab"
>
  <div class="row row-cols-1 row-cols-md-3 g-4 pt-3">
    <% @array1.concat(@array2).each do |h| %>

      <% if h["status"]["Finished"] %>

        <div class="col">
          <%= link_to "/cards/#{h['id']}", class: "no_link" do %>
            <div class="card h-100" style="width: 18rem;">
              <div class="card-body">
                <h4 class="card-title"><%= h["receiver_id"] %></h5>
                <h5>Status: <%= h["status"] %></h5>
                <p class="card-text"><%= h["description"] %></p>
              </div>
            </div>
          <% end %>
        </div>

      <% end %>

    <% end %>
  </div>
</div>